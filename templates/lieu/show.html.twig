{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <div class="container">
        <div class="container"><h1
                    style="padding-top: 2rem; padding-bottom: 5rem; color: #FFFFFF">{{ lieu.nom }}</h1>
            <div class="row">
                <div class="card text-center w-100 align-middle">
                    <div class="card-body">
                        <h1>Lieu</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ lieu.ville.nom }}</td>
                            </tr>
                            <tr>
                                <th>Id</th>
                                <td>{{ lieu.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ lieu.nom }}</td>
                            </tr>
                            <tr>
                                <th>Rue</th>
                                <td>{{ lieu.rue }}</td>
                            </tr>
                            <tr>
                                <th>Latitude</th>
                                <td>{{ lieu.latitude }}</td>
                            </tr>
                            <tr>
                                <th>Longitude</th>
                                <td>{{ lieu.longitude }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('app_lieu_index') }}">Retour a la liste</a>

                        <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>

                        {{ include('lieu/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
