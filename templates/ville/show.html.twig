{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
    <h1 style="color: #FFFFFF">{{ ville.nom }}</h1>

    <div class="container"><h1 style="padding-top: 2rem; padding-bottom: 5rem; color: #FFFFFF">Ville</h1>
        <div class="row">
            <div class="card text-center w-100 align-middle">
                <div class="card-body">

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ ville.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ ville.nom }}</td>
                        </tr>
                        <tr>
                            <th>CodePostal</th>
                            <td>{{ ville.codePostal }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_ville_index') }}">Retour a la liste</a>

                    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>

                    {{ include('ville/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
