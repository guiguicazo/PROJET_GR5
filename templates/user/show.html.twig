{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 style="color: #FFFFFF; padding-top: 2rem; padding-bottom: 5rem">Utilisateur</h1>
    <div class="container">
        <div class="row">
            <div class="card text-center w-100 align-middle">
                <div class="card-body">
                    <h1>{{ user.username }}</h1>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prenom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ user.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Mail</th>
                            <td>{{ user.mail }}</td>
                        </tr>
                        <tr>
                            <th>Administrateur</th>
                            <td>{{ user.administrateur ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Actif</th>
                            <td>{{ user.actif ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Campus</th>
                            <td>{{ user.campus }}</td>
                        </tr>
                        <tr>
                            <th>Phot</th>
                            <td>{{ user.image }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_user_index') }}">Retour Ã  la liste</a>

                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
