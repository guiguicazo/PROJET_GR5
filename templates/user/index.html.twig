{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <h1 style="color: #FFFFFF; padding-top: 2rem; padding-bottom: 5rem">Liste des utilisateur</h1>
<div class="container">
    <div class="row">
        <div class="card text-center w-100 align-middle">
            <div class="card-body">
    {{ include('user/filterUser.html.twig', {'button_label': 'Rechercher'}) }}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th>Mail</th>
            <th>Administrateur</th>
            <th>Actif</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ user.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="text-success" href="{{ path('app_user_show', {'id': user.id}) }}">DÃ©tail</a>
                    <a class="text-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas d'utilisateur trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Creer un utilisateur</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
